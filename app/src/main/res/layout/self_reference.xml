<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="641dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dimensiones de sistema de referencia"
            android:textAlignment="center"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/norte_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="1000"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="183dp"
                android:layout_height="34dp"
                android:text="Norte"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/este_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="1000"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="184dp"
                android:layout_height="34dp"
                android:text="Este"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="404dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Latitud y longitud de la base"
                android:textAlignment="center"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="252dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="Easting"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/long_ref"
                    android:layout_width="380dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Ej: 706832"
                    android:inputType="numberDecimal|numberSigned" />

                <TextView
                    android:layout_width="207dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="m"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="296dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="Northing"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/lat_ref"
                    android:layout_width="437dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Ej: 4344683"
                    android:inputType="numberDecimal|numberSigned" />

                <TextView
                    android:layout_width="254dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="m"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="223dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="Zone"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ToggleButton
                    android:id="@+id/zoneToggle"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="ToggleButton"
                    android:textOff="S"
                    android:textOn="M" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="223dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="Grid"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/codeGrid"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="17"
                    android:inputType="numberSigned"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>